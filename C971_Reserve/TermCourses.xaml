<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_Reserve.TermCourses"
             Title="TermCourses">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header-->
        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label 
                x:Name="TermTitleLabel"
                FontSize="Large"
                HorizontalOptions="Center"/>
            <Label 
                x:Name ="TermDateRangeLabel" 
                FontSize="Small"
                HorizontalOptions="Center"/>
        </StackLayout>
        <!-- Courses view -->
            <CollectionView x:Name="CoursesCollectionView" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem
                                Text="Edit"
                                BackgroundColor="#F3B33C" 
                                Invoked="OnEditCourseSwipeItemInvoked"
                                IconImageSource="edit.png"/>
                        </SwipeItems>
                    </SwipeView.LeftItems>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Reveal">
                            <SwipeItem
                                Text="Delete" 
                                BackgroundColor="#AF1111"
                                Invoked="OnDeleteCourseSwipeItemInvoked"
                                IconImageSource="delete.png"/>
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <Frame Padding="10" Margin="10" BackgroundColor="White" HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding CourseTitle}" FontAttributes="Bold"></Label>
                            <Label Text="{Binding EndDate, StringFormat='{0:MM/dd/yyyy}'}"></Label>
                        </StackLayout>
                    </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="20"
                     Margin="0,30,0,0"
                     Grid.Row="2">
            <Button Text="Back"
                    Clicked="OnBackButtonClicked"/>
            <Button Text="Add Course" 
                    Clicked="OnAddCourseButtonClicked"/>
        </StackLayout>
        
       
    </Grid>
</ContentPage>