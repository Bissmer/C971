<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_Reserve.AddTerm">


    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Add New Term" FontSize="Large" HorizontalOptions="Center" Grid.Row="0"/>
        <Entry x:Name ="TermTitleEntry" Placeholder="Term Title" MaxLength="100" Grid.Row="1" TextChanged="OnFieldChanged"/>
        <DatePicker x:Name="StartDatePicker" Grid.Row="2" DateSelected="OnFieldChanged"/>
        <DatePicker x:Name="EndDatePicker" Grid.Row="3" DateSelected="OnFieldChanged"/>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Grid.Row="4" Margin="0,30,0,0">
            <Button 
                    Text="Cancel"
                    Clicked="OnCancelButtonClicked"/>

            <Button x:Name="SaveButton"
                    Text="Save"
                    IsEnabled="False"
                    Clicked="OnSaveButtonClicked"/>
        </StackLayout>
       
        
        </Grid>
</ContentPage>